<div class="bg-warning p-2">
    <h3>外層元件</h3>
    <InnerView Notification="RefreshMessage" />
    <InnerProblemView Notification="RefreshMessage" />
    <div class="bg-secondary m-4">@Message</div>
</div>

@code {
    string Message = "";

    void RefreshMessage(string msg)
    {
        Message = msg;
    }
}
