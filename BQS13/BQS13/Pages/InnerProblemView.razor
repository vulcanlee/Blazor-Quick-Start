<div class="bg-primary m-3 ml-5 p-2">
    <h3>內層元件(第一次按鈕無法觸發)</h3>
    <div><input @bind="Message" @bind:event="oninput" /></div>
    <div>@Message</div>
    <div>
        <button class="btn btn-success"
                @onclick="SendNotificationAsync">
            送出
        </button>
    </div>
</div>

@code {
    string Message = "";
    [Parameter]
    public EventCallback<string> Notification { get; set; }

    async Task SendNotificationAsync()
    {
        if (Notification.HasDelegate)
        {
            await Notification.InvokeAsync(Message);
        }
    }
}
